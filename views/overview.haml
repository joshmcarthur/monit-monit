#welcome.alert-message.block-message.success
  %p
    %strong Welcome to MonitMonit!
    %p
      It's #{Time.now.strftime("%A %e %B %Y")}, and you're managing #{Cluster.count} Monit clusters which monitor #{@servers.length} servers.
      %br
      %strong Enjoy!
.alert-message.warning.countdown
- @servers.each do |server|
  %section.server{:id => server.id}
    %header.actions
      %h2= "#{server.system.name}"
    .row
      .span4.columns
        #cpu_chart
      .span4.columns
        #memory_chart
      .span4.columns
        #load_chart
      .span4.columns
        %h2.uptime
          = "#{server.system.uptime} seconds"
        %a.btn.large.success{:href => "/servers/#{server.id}"}
          Detail&nbsp;&#8667;
    %input{:type => "hidden", :class => "cpu", :value => server.system.cpu}
    %input{:type => "hidden", :class => "memory", :value => server.system.memory}
    %input{:type => "hidden", :class => "load", :value => server.system.load}


- content_for :javascripts do
  :javascript
    doCountdown();

