%head
  %meta{:chartset => "utf-8"}
  %meta{"meta-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

  %title
    Monit Monit
    = @title.nil? ? "" : " :: #{@title}"

  %meta{:name => "author", :content => "@sudojosh"}
  %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}

  %link{:rel => "stylesheet", :type => "text/css", :href => "/stylesheets/monitmonit.css"}
  %link{:href => "/stylesheets/bootstrap.min.css", :rel => "stylesheet", :type => "text/css"}

%body
  #container.container
    .topbar-wrapper
      %header.topbar
        %div.fill
          %h3.title
            %a{:href => '/'} MonitMonit
          .twipsy.right.goto_overview
            .twipsy-arrow
            .twipsy-inner
              Go to Overview!
          %ul.secondary-nav
            %li
              %a{:href => '/servers'} Manage Servers
    #main{:role => "main"}
      .row
        = yield
    %footer
      .row
        .span8.columns
          %a.twitter-follow-button{:href => "http://twitter.com/sudojosh"} Follow @sudojosh
          %script{:src => "http://platform.twitter.com/widgets.js", :type => "text/javascript"}
        .span8.columns.right
          %a.attr{:href => "http://www.greepit.com/open-source-icons-gcons/"} Icons from Greepit
    %br.clear

  %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"}
  %script{:src => "https://www.google.com/jsapi"}
  %script{:src => "/javascripts/monitmonit_charts.js"}
  %script{:src => "/javascripts/jquery.countdown.min.js"}
  %script{:src => "/javascripts/jquery.showtime.min.js"}
  %script{:src => "/javascripts/monitmonit.js"}


  :javascript
    window.jQuery || document.write('<script src="/javascripts/jquery.min.js"><\/script>')
  = yield_content :javascripts

