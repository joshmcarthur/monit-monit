%head
  %meta{:chartset => "utf-8"}
  %meta{"meta-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}

  %title
    Monit Monit
    = @title.nil? ? "" : " :: #{@title}"

  %meta{:name => "author", :content => "@sudojosh"}
  %meta{:name => "viewport", :content => "width=device-width,initial-scale=1"}

  %link{:href => "/stylesheets/bootstrap.min.css", :rel => "stylesheet", :type => "text/css"}
  :css
    html, body {  background-color: #888; border: none; height: 100%; width: 100%;}
    .modal { top: auto; margin-top: 280px; }
    .modal-header h3 { background: url(../images/error.png) no-repeat 0px 50%; padding-left: 30px; }

%body
  .modal
    .modal-header
      %h3= @title.nil? ? "Something went wrong" : @title
    .modal-body
      %p
        = yield
    .modal-footer
      %a.btn{:href => "/"}= "Return to Overview"

