# A sample Gemfile
source "http://rubygems.org"

#Display
gem 'sinatra'
gem 'haml'


#Parsing and Marshalling
gem 'nokogiri'
gem 'json'

#Queueing
gem 'rufus-scheduler'

#Database
gem 'datamapper'
gem 'dm-sqlite-adapter'

#Other
gem 'sinatra-content-for'
gem 'dm-timestamps'

# Mailing
gem 'mail'
gem 'mailman'

group :development do
  gem 'ruby-debug19', :require => 'ruby-debug'
end

group :test do
    gem 'rack-test'
    gem 'capybara'
    gem 'launchy'
end

